@model Assignment_2_NEW.Models.Product

@{
    ViewData["Title"] = "Thông tin";
}

<h1>Thông tin hàng</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            ID hàng hóa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            Tên hàng hóa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDesc)
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            ID loại hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.ProductId">Sửa</a> <a class="btn btn-secondary" asp-action="Index">Về trang trước</a>
</div>
