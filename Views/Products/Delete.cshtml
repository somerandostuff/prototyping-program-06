@model Assignment_2_NEW.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<h1>Xác nhận xóa</h1>

<h3>Bạn có chắc chắn để xóa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID hàng hóa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            Tên hàng hóa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDesc)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            ID loại hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" value="Delete" class="btn btn-danger">Xóa</button> <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
