@model Assignment_2_NEW.Models.Category

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<h1>Xác nhận xóa</h1>

<h3>Bạn có chắc chắn để xóa?</h3>
<div>
    <h4>Thông tin</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID danh mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class = "col-sm-2">
            Tên danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDesc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" value="Delete" class="btn btn-danger">Xóa</button>
        <a class="btn btn-secondary" asp-action="Index">Về trang trước</a>
    </form>
</div>
