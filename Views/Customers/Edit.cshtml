@model Assignment_2_NEW.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
        <form asp-action="Edit">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="CustomerId" class="control-label">ID tài khoản khách</label>
                    <input asp-for="CustomerId" class="form-control" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="CustomerRealName" class="control-label">Tên</label>
                    <input asp-for="CustomerRealName" class="form-control" />
                    <span asp-validation-for="CustomerRealName" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="CustomerDob" class="control-label">Ngày sinh</label>
                    <input asp-for="CustomerDob" class="form-control" />
                    <span asp-validation-for="CustomerDob" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <label asp-for="CustomerEmail" class="control-label">Email</label>
                    <input asp-for="CustomerEmail" class="form-control" />
                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="CustomerPassword" class="control-label">Mật khẩu</label>
                    <input asp-for="CustomerPassword" class="form-control" />
                    <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" value="Save" class="btn btn-primary">Lưu</button> <a class="btn btn-secondary" asp-action="Index">Về trang trước</a>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
