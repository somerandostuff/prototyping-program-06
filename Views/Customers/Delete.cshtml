@model Assignment_2_NEW.Models.Customer

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<h1>Xác nhận xóa</h1>

<h3>Bạn có chắc chắn để xóa?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID tài khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerRealName)
        </dd>
        <dt class = "col-sm-2">
            Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerDob)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerPassword)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerPassword)
        </dd> *@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <button type="submit" value="Delete" class="btn btn-danger">Xóa</button> <a class="btn btn-secondary" asp-action="Index">Về trang trước</a>
    </form>
</div>
