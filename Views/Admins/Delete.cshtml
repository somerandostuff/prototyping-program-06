@model Assignment_2_NEW.Models.Admin

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<h1>Xác nhận xóa</h1>
<hr />

<h3>Bạn có chắc chắn để xóa mục tiêu này?</h3>
<div>
    <h4>Thông tin</h4><br />
    <dl class="row">
        <dt class="col-sm-2">
            ID tài khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdminId)
        </dd>
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminRealName)
        </dd>
        <dt class = "col-sm-2">
            Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminDob)
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminEmail)
        </dd>
@*         <dt class = "col-sm-2">
            Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminPassword)
        </dd> *@
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">Về trang trước</a>
    </form>
</div>
