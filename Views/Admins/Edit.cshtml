@model Assignment_2_NEW.Models.Admin

@{
    ViewData["Title"] = "Sửa TK QTV";
}

<h1>Sửa thông tin TK QTV</h1>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="AdminId" class="control-label">ID tài khoản</label>
                    <input asp-for="AdminId" class="form-control" />
                    <span asp-validation-for="AdminId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="AdminRealName" class="control-label">Tên</label>
                    <input asp-for="AdminRealName" class="form-control" />
                    <span asp-validation-for="AdminRealName" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="AdminDob" class="control-label">Ngày sinh</label>
                    <input asp-for="AdminDob" class="form-control" />
                    <span asp-validation-for="AdminDob" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <label asp-for="AdminEmail" class="control-label">Email</label>
                    <input asp-for="AdminEmail" class="form-control" />
                    <span asp-validation-for="AdminEmail" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="AdminPassword" class="control-label">Mật khẩu</label>
                    <input asp-for="AdminPassword" class="form-control" />
                    <span asp-validation-for="AdminPassword" class="text-danger"></span>
                </div>
            </div>
            <br />
            <button class="btn btn-primary" type="submit" value="">Lưu</button> <a class="btn btn-secondary" asp-action="Index">Về trang trước</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
